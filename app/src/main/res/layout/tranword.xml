<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >
    <LinearLayout 
        android:id="@+id/LinearLayout001"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <ImageView 
		    android:id="@+id/sad_iv"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:gravity="center"
		    android:src="@drawable/sad"
	    />
    </LinearLayout>
    <TextView 
            android:id="@+id/no_url"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="很抱歉，找不到相应的URL......"
            android:gravity="center"
            android:layout_below="@id/LinearLayout001"
            android:textColor="#000000"
            android:textSize="24dip"
            />
    <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="^-^-_-。sorry！"
            android:gravity="center"
            android:layout_below="@id/no_url"
            android:textColor="#000000"
            android:textSize="24dip"
            />
	<RelativeLayout 
		android:id="@+id/re_layout"
	    android:orientation="vertical"  
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">
	</RelativeLayout>
</RelativeLayout>